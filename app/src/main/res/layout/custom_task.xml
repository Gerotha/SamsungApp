<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="97dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/login_form_container"
    android:elevation="8dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    >

        <TextView
            android:id="@+id/taskTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="10:15"
            android:textColor="@android:color/darker_gray"
            android:textSize="30dp" />

    <RelativeLayout
        android:layout_width="244dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/taskTitle"
            android:layout_width="225dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="22dp"
            android:text="Prova de Redes"
            android:textColor="@android:color/darker_gray"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/taskDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="2dp"
            android:text="20/08/2019"
            android:textColor="@color/blueText"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/taskDescription"
            android:layout_width="225dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="11dp"
            android:text="Vai cair coisa pakas que nois vem que vem futebol de qualidade"
            android:textColor="@android:color/darker_gray" />

        <View
            android:id="@+id/divider4"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/mainGrey" />


    </RelativeLayout>
</RelativeLayout>